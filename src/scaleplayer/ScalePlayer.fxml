<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Double?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Polygon?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scaleplayer.ScalePlayer">
   <children>
      <BorderPane prefHeight="406.0" prefWidth="600.0">
         <center>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" stylesheets="@scaleplayer.css" BorderPane.alignment="CENTER" spacing="10">
               <children>
                  <Button id="start-button" mnemonicParsing="false" text="Play scale" onAction="#handlePlayScaleButtonAction">
                     <graphic>
                        <Polygon stroke="BLACK" strokeType="INSIDE">
                          <points>
                            <Double fx:value="0.0" />
                            <Double fx:value="0.0" />
                            <Double fx:value="20.0" />
                            <Double fx:value="10.0" />
                            <Double fx:value="0.0" />
                            <Double fx:value="20.0" />
                          </points>
                        </Polygon>
                     </graphic></Button>
                  <Button id="stop-button" mnemonicParsing="false" text="Stop playing" onAction="#handleStopPlayingButtonAction">
                     <graphic>
                        <Rectangle arcHeight="5.0" arcWidth="5.0" height="20" stroke="BLACK" strokeType="INSIDE" width="20.0" />
                     </graphic></Button>
               </children>
            </HBox>
         </center>
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Exit" onAction="#handleExitMenuItemAction"/>
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
